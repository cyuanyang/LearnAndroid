<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AppCompatImageView:"/>

            <Button
                android:id="@+id/appCompatImageViewStartBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始"/>

            <android.support.v7.widget.AppCompatImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_eeeeee"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ImageView:"/>

            <Button
                android:id="@+id/imageViewStartBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始"/>

            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_eeeeee"
                />

            <LinearLayout
                android:id="@+id/api21Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Api>=21:"/>

                <Button
                    android:id="@+id/imageViewStartBtn21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始"/>

                <ImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_eeeeee"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="simple1:"/>

            <Button
                android:id="@+id/simple1StartBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始"/>

            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/simple1View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_eeeeee"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>