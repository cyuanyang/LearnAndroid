<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cyy.animatesimple.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:elevation="30dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/svgAnimBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="svg animate" />

            <Button
                android:id="@+id/pathAnimBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="path animate" />

            <Button
                android:id="@+id/customEvaluator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="custom Evaluator" />

            <Button
                android:id="@+id/activityTransition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="activityTransition" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
